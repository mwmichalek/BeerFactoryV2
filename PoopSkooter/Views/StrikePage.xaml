                                    <sfgauge:CircularScale.Pointers>

                                        <sfgauge:CircularPointer
                                            PointerType="NeedlePointer" Value="60" 
                                            NeedleLengthFactor="0.65" NeedlePointerType="Rectangle"
                                            PointerCapDiameter="20" PointerCapStroke="#f00"
                                            NeedlePointerStrokeThickness="4"
                                            NeedlePointerStroke="#f00" />

                                    </sfgauge:CircularScale.Pointers>

                                </sfgauge:CircularScale>

                            </sfgauge:SfCircularGauge.Scales>

                        </sfgauge:SfCircularGauge>-->

                        <!--<Rectangle Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2"
                             Height="100"  Width="250"
                             HorizontalAlignment="Center" VerticalAlignment="Center"
                             Margin="0 0 0 0"
                             Stroke="Gray" StrokeThickness="3">
                            
                        </Rectangle>

                        <sfgauge:SfDigitalGauge Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2" />-->


                        <Rectangle Grid.Column="0" Grid.Row="0" 
                             Height="70"  Width="125"
                             HorizontalAlignment="Center" VerticalAlignment="Center"
                             Margin="0 0 0 0"
                             Stroke="Gray" StrokeThickness="3" />

                        
                        <TextBlock Grid.Column="0" Grid.Row="0"
                            HorizontalAlignment="Left" VerticalAlignment="Top"
                            FontSize="20" FontFamily="Consolas"
                                   Margin="5"
                                   Width="70"
                                   TextWrapping="WrapWholeWords"
                           Text="SSR %" />

                        <!--<sfgauge:SfDigitalGauge
                            Grid.Column="2" Grid.Row="2"
                            VerticalAlignment="Center" HorizontalAlignment="Center"
                            Value="{Binding HltSetpoint, Mode=TwoWay}"
                            CharacterHeight="40" CharacterWidth="20"
                            CharacterType="EightCrossEightDotMatrix" />-->
                        
                        <TextBlock Grid.Column="0" Grid.Row="0"
                            HorizontalAlignment="Center" VerticalAlignment="Center"
                           FontSize="50" FontFamily="Consolas"
                                   
                           Text="{Binding HltSsrPercentage, Mode=TwoWay}" />

                        <Rectangle Grid.Column="1" Grid.Row="0" 
                         Height="75"  Width="125"
                         HorizontalAlignment="Center" VerticalAlignment="Center"
                         Stroke="Gray" StrokeThickness="3" />

                        <TextBlock Grid.Column="1" Grid.Row="0"
                            HorizontalAlignment="Left" VerticalAlignment="Top"
                           FontSize="20" FontFamily="Consolas"
                                   Margin="5"
                                   Width="70"
                                   TextWrapping="WrapWholeWords"
                           Text="ACTUAL" />


                        <!--<sfgauge:SfDigitalGauge
                            Grid.Column="1" Grid.Row="2"
                            VerticalAlignment="Center" HorizontalAlignment="Center"
                            Value="{Binding HltTemperature, Mode=TwoWay}"
                            CharacterHeight="40" CharacterWidth="20"
                            CharacterType="EightCrossEightDotMatrix" />-->

                        <TextBlock Grid.Column="1" Grid.Row="0"
                            HorizontalAlignment="Center" VerticalAlignment="Center"
                           FontSize="50" FontFamily="Consolas"
                           Text="{Binding HltTemperature, Mode=TwoWay}" />
                    </Grid>
                </Border>


                <!-- ***** CHART PANEL ***** -->
                <Border 
                        Margin="5"
                        Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2">

                </Border>







